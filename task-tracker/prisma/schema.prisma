generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int     @id @default(autoincrement())
  publicId String  @unique
  email    String
  password String
  username String
  role     String
  active   Boolean

  createdAt DateTime
  updatedAt DateTime
  Task      Task[]
}

model Task {
  id          Int    @id @default(autoincrement())
  publicId    String @unique @default(cuid())
  title       String
  description String
  status      String // in-progress | done
  assignee    User   @relation(fields: [userId], references: [publicId])
  userId      String
}
